<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    app:contentPadding="10dp"
    app:cardCornerRadius="4dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="@dimen/dimen_48"
                android:layout_height="@dimen/dimen_48"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_github"/>
            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:textColor="@color/white"
                tools:text = "@string/app_name"
                android:textSize="14sp"
                android:textStyle="bold"
                android:lines="1"
                android:gravity="center"/>
            <TextView
                android:id="@+id/bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10"
                android:maxLines="3"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:text = "@string/app_name"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimen_10">

            <TextView
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_business_white_18dp"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="start|center_vertical"
                android:lines="1"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:text="@string/app_name"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_place_white_18dp"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                tools:text="@string/app_name"/>


            <TextView
                android:id="@+id/blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_rss_feed_white_18dp"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                tools:text="@string/app_name"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email_white_18dp"
                android:drawablePadding="@dimen/dimen_5"
                android:gravity="start|center_vertical"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_14"
                tools:text="@string/app_name"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>