<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_bg2"
    android:padding="@dimen/dimen_10"
    android:layout_marginTop="@dimen/dimen_5"
    android:layout_marginBottom="@dimen/dimen_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ir2_repo_nameicon"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_30"
            android:textSize="@dimen/text_size_14"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/ir2_repo_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            tools:text="text"
            android:textColor="@color/md_blue_400"
            android:textSize="@dimen/text_size_18"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ir2_fork_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12"
            android:text="Forked from "/>
        <TextView
            android:id="@+id/ir2_forked_reponame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/md_blue_300"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12"
            tools:text="forkedrepo"/>

    </LinearLayout>

    <TextView
        android:id="@+id/ir2_repodesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10"
        android:textSize="@dimen/text_size_12"
        tools:text="testdesc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_30"
        android:layout_marginTop="@dimen/dimen_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ir2_langcolor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_12"
            android:text="{faw_circle}"/>

        <TextView
            android:id="@+id/ir2_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/text_size_12"
            tools:text="javascript"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_20"
            android:gravity="center"
            android:text="{oct_star}"/>

        <TextView
            android:id="@+id/ir2_starscount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/md_grey_500"
            tools:text="1000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dimen_20"
            android:text="{oct_repo_forked}"/>
        <TextView
            android:id="@+id/ir2_forkscount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_12"
            android:gravity="center_vertical"
            android:textColor="@color/md_grey_500"
            tools:text="1000"/>

    </LinearLayout>

</LinearLayout>