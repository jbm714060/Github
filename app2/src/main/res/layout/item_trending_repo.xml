<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/dimen_10"
    app:cardCornerRadius="0dp"
    android:background="@color/md_white_1000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itr_reponame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/md_blue_400"
                tools:text="@string/app_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/itr_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="4"
            android:gravity="center_vertical"
            android:textColor="@color/md_grey_500"
            android:textSize="@dimen/text_size_12"
            android:layout_marginTop="@dimen/dimen_5"
            tools:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itr_langcolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:text="{faw_circle}"/>

            <TextView
                android:id="@+id/itr_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_500"
                android:textSize="@dimen/text_size_12"
                tools:text="javascript"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:textSize="@dimen/text_size_12"
                android:text="{oct_star}"/>

            <TextView
                android:id="@+id/itr_stargazerscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_500"
                android:textSize="@dimen/text_size_12"
                tools:text="1000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8"
                android:textSize="@dimen/text_size_12"
                android:text="{oct_repo_forked}"/>

            <TextView
                android:id="@+id/itr_forkscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_500"
                android:textSize="@dimen/text_size_12"
                tools:text="1000"/>

            <LinearLayout
                android:id="@+id/newstars_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:layout_marginLeft="@dimen/dimen_8"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_12"
                    android:text="{oct_star}"/>

                <TextView
                    android:id="@+id/itr_newstars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_grey_500"
                    android:textSize="@dimen/text_size_12"
                    android:maxLines="1"
                    tools:text="190 stars today"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>