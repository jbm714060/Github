<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/dimen_2"
    app:contentPadding="@dimen/dimen_10"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_repo_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:textSize="@dimen/text_size_18"
                android:textColor="@color/md_blue_400"
                tools:text="@string/app_name"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_repo_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="left|center_vertical"
            android:maxLines="4"
            android:textSize="@dimen/text_size_12"
            android:textColor="@color/md_grey_500"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_30"
            android:layout_marginTop="@dimen/dimen_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ir_langcolor"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_12"
                android:text="{faw_circle}"/>

            <TextView
                android:id="@+id/ir_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_grey_500"
                android:textSize="@dimen/text_size_12"
                tools:text="javascript"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_10"
                android:gravity="center"
                android:text="{oct_star}"/>

            <TextView
                android:id="@+id/item_repo_starscount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/md_grey_500"
                tools:text="1000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dimen_10"
                android:text="{oct_repo_forked}"/>
            <TextView
                android:id="@+id/item_repo_forkscount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/text_size_12"
                android:gravity="center_vertical"
                android:textColor="@color/md_grey_500"
                tools:text="1000"/>

            <TextView
                android:id="@+id/ir_updatetime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_12"
                android:gravity="right|center_vertical"
                android:textColor="@color/md_grey_500"
                tools:text="1000"/>

        </LinearLayout>
        
    </LinearLayout>

</android.support.v7.widget.CardView>